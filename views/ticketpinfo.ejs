<% for(var i=0;i<data.length;i++) { %>
 <div class="card text-center">
  <div class="card-header">
    Passenger Information
  </div>
  <div class="card-body">
    <h5 class="card-title">Name- <%= data[i].fname %> <%= data[i].lname %></h5>
    <p class="card-text">Passenger is from <%= data[i].country %> with nationality- <%= data[i].nationality %></p>
    <p class="card-text">Email- <%= data[i].email %> , Phone Number - <%= data[i].phone %> and DOB - <%= data[i].dob %></p>
  </div>
</div>
<% } %>
<a href="/passengerinfo"><button class="btn btn-info button1">Change Passenger Details</button></a>
