<!doctype html>
<html>
<head>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<link href="/images/style2.css" rel="stylesheet" type="text/css" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">TAP</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/">Travel And Piquency</a>
      </li>
    </ul>
  </div>
</nav>
<br>         
<br>

<div class="container">  
<% for(var i=0;i<data.length;i++) { %>
 <div class="card text-center">
  <div class="card-header">
    Flight Details
  </div>
  <div class="card-body">
    <h5 class="card-title">Airline - <%= data[i].airline %> , From - <%= data[i].from %> , To - <%= data[i].to %> </h5>
    <p class="card-text">Price - <%= data[i].price %> </p>
    </div>
</div>
    <% if(of=='return'){ %>
    <div class="card text-center">
      <div class="card-body">
     <form method="post" action="/addreturn/<%= data[i].id %>/<%= data[i].airline %>/<%= data[i].from %>/<%= data[i].to %>/<%= data[i].price %>">
    <% } else { %>
     <div class="card text-center">
      <div class="card-body">
     <form method="post" action="/adddepart/<%= data[i].id %>/<%= data[i].airline %>/<%= data[i].from %>/<%= data[i].to %>/<%= data[i].price %>">
    <% } %>
      <div class="form-group">
      <label for='seat'>Seat Preference</label>
      <select name="seat" class='from-control'>
      <% if(data[i].windowside !=0) { %>
      <option value="windowside">windowside - <%= data[i].windowside %></option>
      <% } 
       if(data[i].aisle !=0) { %>
      <option value="aisle">aisle - <%= data[i].aisle %></option>
      <% } 
      if(data[i].middle !=0) { %>
      <option value="middle">middle - <%= data[i].middle %></option>
      <% } %>
      </select>
      </div>
      <div class="form-row">
      <div class="form-group col-md-6">
      <label for="name"> Passenger Name </label>
      <input type="text" class="form-control" name='name' id="name">
      </div>
      <div class="form-group col-md-6">
      <label for="age">Passenger Age</label>
      <input type="text" class="form-control" name='age' id="age">
      </div>
      </div>

      <input class='btn btn-success' type="submit" value="ADD">
    </form>
  </div></div>
</div>
<a href='/ticketfirstpage'><button class="btn btn-info button1">Add more</button></a>
</form>
<% } %>
</div>
<a href="/passengerinfo"><button class="btn btn-info button1">Continue-Add Contact Details</button></a>
<br><br><br>
</body>

</html>